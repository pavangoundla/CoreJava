package BasicConcepts;

public class VariablesAndDataTypes {
	
	/* NOTES:
	 * 
	 * VARIABLES AND DATA TYPES:
	 * ========================
	 * 
	 * TECH DEF: 
	 * 1. In java,  variable is a name given to memory location and this variable is associated with a value
	 * 2. 
	 * 
	 * SYNTAX: DataType VariableName = Value;
	 * 
	 * REAL TIME: A tank full of milk
	 * 
	 * CONVERSION: milk heritageMilk = 50;
	 * 
	 */

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int number = 99;
		String name = "Pavan";
		double dec = 2.2;
		char letter = 'P';
		boolean validate = true;
		System.out.println(number + name + dec + letter + validate);
		
	}

}
